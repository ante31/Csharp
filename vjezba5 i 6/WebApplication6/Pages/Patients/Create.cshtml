@page
@model WebApplication6.Pages.Patients.CreateModel
@{
}

<br>
<h2>Novi Pacijent</h2>

@if (Model.errorMessage.Length > 0)
{
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
	</div>
}

<form method="POST">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Oib</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="oib" value="@Model.patientInfo.oib">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Mbo</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="mbo" value="@Model.patientInfo.mbo">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Ime i prezime</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" value="@Model.patientInfo.name">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Spol</label>
		<div class="col-sm-6">
			<select class="form-control" asp-for="patientInfo.gender" name="gender">
				<option value="Muško">Muško</option>
				<option value="Žensko">Žensko</option>
			</select>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Datum rođenja</label>
		<div class="col-sm-6">
			<input type="date" class="form-control" name="dateOfBirth" value="@Model.patientInfo.dateOfBirth">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Dijagnoza</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="diagnosis" value="@Model.patientInfo.diagnosis">
		</div>
	</div>

	@if (Model.successMessage.Length > 0)
	{
		<div class="row mb-3">
			<div class="offset sm-3" col-sm-3 d-grid>
				<div class="alert alert-success alert-dismissible fade show" role="alert">
					<strong>@Model.successMessage</strong>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
				</div>
			</div>
		</div>
	}

	<div class="row mb-3">
		<div class="offset-sm-6 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Dodaj</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/Patients" role="button">Nazad</a>
		</div>
	</div>
</form>